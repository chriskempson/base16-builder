%>/* SPAN elements with the classes below are added by prettyprint. */
.pln { color: #<%= @base["03"]["hex"] %> }  /* plain text */

@media screen {
	.str { color: #<%= @base["0B"]["hex"] %> }  /* string content */
	.kwd { color: #<%= @base["08"]["hex"] %> }  /* a keyword */
	.com { color: #<%= @base["03"]["hex"] %> }  /* a comment */
	.typ { color: #<%= @base["09"]["hex"] %> }  /* a type name */
	.lit { color: #<%= @base["0C"]["hex"] %> }  /* a literal value */
	/* punctuation, lisp open bracket, lisp close bracket */
	.pun, .opn, .clo { color: #<%= @base["0F"]["hex"] %> }
	.tag { color: #<%= @base["03"]["hex"] %> }  /* a markup tag name */
	.atn { color: #<%= @base["03"]["hex"] %> }  /* a markup attribute name */
	.atv { color: #<%= @base["0B"]["hex"] %> }  /* a markup attribute value */
	.dec, .var { color: #<%= @base["08"]["hex"] %> }  /* a declaration; a variable name */
	.fun { color: #<%= @base["0D"]["hex"] %> }  /* a function name */
}

/* Use higher contrast and text-weight for printable form. */
@media print, projection {
	.str { color: #<%= @base["0B"]["hex"] %> }
	.kwd { color: #<%= @base["08"]["hex"] %>; font-weight: bold }
	.com { color: #<%= @base["03"]["hex"] %>; font-style: italic }
	.typ { color: #<%= @base["09"]["hex"] %>; font-weight: bold }
	.lit { color: #<%= @base["0C"]["hex"] %> }
	.pun, .opn, .clo { color: #<%= @base["0F"]["hex"] %> }
	.tag { color: #<%= @base["03"]["hex"] %>; font-weight: bold }
	.atn { color: #<%= @base["03"]["hex"] %> }
	.atv { color: #<%= @base["0B"]["hex"] %> }
}

/* Put a border around prettyprinted code snippets. */
pre.prettyprint { padding: 10px; border: 1px solid #<%= @base["04"]["hex"] %>; line-height: 1.5; font-size: 12px; font-family: Menlo, Monaco, Consolas, monospace; background: #<%= @base["00"]["hex"] %>; }

/* Specify class=linenums on a pre to get line numbering */
ol.linenums { margin-top: 0; margin-bottom: 0 } /* IE indents via margin-left */
li.L0,
li.L1,
li.L2,
li.L3,
li.L5,
li.L6,
li.L7,
li.L8 { }
/* Alternate shading for lines */
li.L1,
li.L3,
li.L5,
li.L7,
li.L9 {  }
