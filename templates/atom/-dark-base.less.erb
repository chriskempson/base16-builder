@import "base16-<%= @slug %>-dark-syntax-variables.less";

atom-text-editor, // <- remove when Shadow DOM can't be disabled
:host {
  color: @syntax-text-color;
  background-color: @syntax-background-color;
  .gutter {
    color: @syntax-gutter-text-color;
    background-color: @syntax-gutter-background-color;
  }

  .gutter .line-number.cursor-line {
    color: @syntax-gutter-text-color-selected;
    background-color: @syntax-gutter-background-color-selected;
  }

  .gutter .line-number.cursor-line-no-selection {
    color: @syntax-gutter-text-color-selected;
  }

  .wrap-guide {
    color: @syntax-wrap-guide-color;
  }

  .indent-guide {
    color: @syntax-indent-guide-color;
  }

  .invisible-character {
    color: @syntax-invisible-character-color;
  }

  .search-results .marker .region {
    background-color: transparent;
    border: @syntax-result-marker-color;
  }

  .search-results .marker.current-result .region {
    border: @syntax-result-marker-color-selected;
  }

  .cursor {
    border-color: @syntax-cursor-color;
  }

  .selection .region {
    background-color: @syntax-selection-color;
  }

  .line-number.cursor-line-no-selection, .line.cursor-line {
    background-color: @syntax-gutter-background-color-selected;
  }

}

.variable.parameter.function {
  color: @base05-color;
}

.comment, .punctuation.definition.comment {
  color: @base03-color;
}

.punctuation.definition.string, .punctuation.definition.variable, .punctuation.definition.string, .punctuation.definition.parameters, .punctuation.definition.string, .punctuation.definition.array {
  color: @base05-color;
}

.none {
  color: @base05-color;
}

.keyword.operator {
  color: @base05-color;
}

.keyword {
  color: @base0E-color;
}

.variable {
  color: @base08-color;
}

.entity.name.function, .meta.require, .support.function.any-method {
  color: @base0D-color;
}

.support.class, .entity.name.class, .entity.name.type.class {
  color: @base0A-color;
}

.meta.class {
  color: @base07-color;
}

.keyword.other.special-method {
  color: @base0D-color;
}

.storage {
  color: @base0E-color;
}

.support.function {
  color: @base0C-color;
}

.string, .constant.other.symbol, .entity.other.inherited-class {
  color: @base0B-color;
}

.constant.numeric {
  color: @base09-color;
}

.none {
  color: @base09-color;
}

.none {
  color: @base09-color;
}

.constant {
  color: @base09-color;
}

.entity.name.tag {
  color: @base08-color;
}

.entity.other.attribute-name {
  color: @base09-color;
}

.entity.other.attribute-name.id, .punctuation.definition.entity {
  color: @base0D-color;
}

.meta.selector {
  color: @base0E-color;
}

.none {
  color: @base09-color;
}

.markup.heading .punctuation.definition.heading, .entity.name.section {
  color: @base0D-color;
}

.keyword.other.unit {
  color: @base09-color;
}

.markup.bold, .punctuation.definition.bold {
  font-weight: bold;
  color: @base0A-color;
}

.markup.italic, .punctuation.definition.italic {
  font-style: italic;
  color: @base0E-color;
}

.markup.raw.inline {
  color: @base0B-color;
}

.string.other.link {
  color: @base08-color;
}

.meta.link {
  color: @base09-color;
}

.markup.list {
  color: @base08-color;
}

.markup.quote {
  color: @base09-color;
}

.meta.separator {
  color: @base05-color;
  background-color: @base02-color;
}

.markup.inserted {
  color: @base0B-color;
}

.markup.deleted {
  color: @base08-color;
}

.markup.changed {
  color: @base0E-color;
}

.constant.other.color {
  color: @base0C-color;
}

.string.regexp {
  color: @base0C-color;
}

.constant.character.escape {
  color: @base0C-color;
}

.punctuation.section.embedded, .variable.interpolation {
  color: @base0F-color;
}

.invalid.illegal {
  color: @base00-color;
  background-color: @base08-color;
}
